<div class="cvd-ReportBlock">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>
        <%= @job.name %> -
        <%= t('job.convert_from') %> <%= @job.format.upcase %>
        <%= t('to') %> <%= @job.format_convert.split('_')[1].upcase %>
      </h1>
      <h2><%= t('report.convert_ended_at') %> <small>(<%= l(@job.updated_at, format: :long) %>)</small></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% if @job.list_links.key?(:output) %>
        <%= link_to t('convert_download'), download_convert_job_path(@job), class: 'btn btn-primary', 'data-no-turbolink': true %>
      <% else %>
        <p>Erreur lors de la conversion votre fichier source est peut-être non valide. <%= link_to 'Tester la validité de mon fichier', root_path, class: 'btn btn-info' %></p>
      <% end %>
    </div>
  </div>
</div>
